{
    "vocab_fp": "./label_number.txt",
    "img_folder": "./images",

    "devices": 1,
    "accelerator": "gpu",
    "epochs": 300,
    "batch_size": 4,
    "num_workers": 8,
    "pin_memory": true,
    "optimizer": "adam",
    "learning_rate": 1e-2,
    "weight_decay": 0,
    "metrics": {
        "complete_match": {},
        "cer": {}
    },
    "lr_scheduler": {
        "name": "cos_warmup",
        "min_lr_mult_factor": 0.01,
        "warmup_epochs": 2,
        "milestones": [5, 10, 16, 22, 30],
        "gamma": 0.5
    },
    "precision": 32,
    "limit_train_batches": 1.0,
    "limit_val_batches": 1.0,
    "pl_checkpoint_monitor": "val-complete_match-epoch",
    "pl_checkpoint_mode": "max"
}
